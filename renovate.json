{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": ["cargo"],
      "groupName": "Rust dependencies",
      "schedule": ["before 4am on Monday"]
    },
    {
      "matchPackagePatterns": ["^tonic", "^prost"],
      "groupName": "gRPC dependencies"
    },
    {
      "matchPackagePatterns": ["^polars"],
      "groupName": "Polars dependencies"
    }
  ],
  "cargo": {
    "enabled": true
  },
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "semanticCommits": "enabled",
  "labels": ["dependencies"],
  "assignees": ["@qmilangowin"]
}
